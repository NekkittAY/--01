<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!-- Основной фон -->
    <SolidColorBrush x:Key="MainBackground" Color="#FFFFFF" />
    <!-- Дополнительный фон -->
    <SolidColorBrush x:Key="SecondaryBackground" Color="#D2F1F0" />
    <!-- Акцент -->
    <SolidColorBrush x:Key="AccentColor" Color="#5EC6CD" />

    <!-- Стиль кнопок -->
    <Style TargetType="Button">
        <Setter Property="FontFamily" Value="Monotype Corsiva" />
        <Setter Property="Background" Value="{StaticResource AccentColor}" />
        <Setter Property="Foreground" Value="White" />
        <Setter Property="Padding" Value="10,5" />
        <Setter Property="Margin" Value="5" />
    </Style>

    <!-- Стиль текстовых полей -->
    <Style TargetType="TextBox">
        <Setter Property="FontFamily" Value="Monotype Corsiva" />
        <Setter Property="Background" Value="{StaticResource SecondaryBackground}" />
        <Setter Property="Padding" Value="5" />
        <Setter Property="Margin" Value="5" />
    </Style>
</ResourceDictionary>
